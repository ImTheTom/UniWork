<!DOCTYPE html>
<html>
    <head>
        <title>C-News</title>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel='stylesheet' type="text/css" href='/stylesheets/style.css' />
        <link rel="icon" type="image/png" href="images/c.png">
    </head>
    <body>
        <%- include('header'); -%>
        <div class="content">
        <h2>
            Top Currencies
        </h2>
            <% coins.forEach(function(coin) { %>
            <a href=<%=coin.url%>><button type="button" class="button-link"><%= coin.name %></button></a><br>
            <% }); %>
        <h2>
            Stock Options
        </h2>
        <% stocks.forEach(function(stock) { %>
            <a href=<%=stock.url%>><button type="button" class="button-link"><%= stock.name %></button></a><br>
        <% }); %>
        <h2>
            Trending Currencies
        </h2>
            <% trending.forEach(function(coin) { %>
            <a href=<%=coin.url%>><button type="button" class="button-link"><%= coin.name %></button></a><br>
            <% }); %>
        </div>
        <%- include('footer'); -%>
    </body>
</html>
